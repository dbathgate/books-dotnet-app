@page
@model RazorApp.Pages.Books

@{
    ViewData["Title"] = "Books";
}

<div class="row">
    <div class="col-2">
        <a type="button" class="btn btn-primary" asp-page="/BookNew">Add Book</a>
    </div>
</div>
<table class="table table-striped">
    <thead>
    <tr>
        <th>Name</th>
        <th>Author</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
        @foreach (var book in Model.BooksList)
        {
            <tr>
                <td>@book.Name</td>
                <td>@book.Author</td>
                <td><a class="btn btn-primary" href="/Books/@book.Id">Edit</a></td>
            </tr>
        }
    </tbody>
</table>